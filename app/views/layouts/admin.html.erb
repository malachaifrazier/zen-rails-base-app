<% content_for :navigation_menu do %>
  <%# Menu items that that should only appear in the navbar of users with
  "admin" role %>
  <li class='nav-item'>
    <%= link_to t('navigation.users'), admin_users_path, class: 'nav-link' %>
  </li>

  <%= render 'layouts/base_menu_items' %>
<% end %>

<%# Render the base layout (application.html.erb), to which this layout will
pass the menu items %>
<%= render template: "layouts/application" %>

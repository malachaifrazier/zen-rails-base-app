<%# Custom helper to display internationalized validation errors %>
<%= display_validation_errors(resource) %>

<div class="panel panel-default devise-bs">
  <div class="panel-heading">
    <h4><%= t('.sign_up', default: "Sign up") %></h4>
  </div>
  <div class="panel-body">
    <%= simple_form_for(resource,
                 as: resource_name,
                 url: registration_path(resource_name),
                 html: { role: "form" }) do |f| %>

      <div class="form-group required">
        <%= f.input :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group required">
        <%= f.input :password, label: 'Password', class: "form-control" %>
      </div>

      <div class="form-group required">
        <%= f.input :password_confirmation, label: 'Password confirmation', class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.input :first_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.input :last_name, label: 'Last name', class: "form-control" %>
      </div>

      <%= f.submit t('.sign_up', default: "Sign up"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<%= render "devise/shared/links" %>

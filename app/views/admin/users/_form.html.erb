<%= simple_form_for([:admin, @user],
             html: { class: "form-horizontal", role: "form"}) do |f| %>

  <%# Custom helper to display internationalized validation errors %>
  <%= display_validation_errors(@user) %>

  <div class="form-group">
    <div class="col-lg-4">
      <%= f.input :email, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-4">
      <%= f.input :password,
                           placeholder: password_placeholder,
                           class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-4">
      <%= f.input :password_confirmation,
                           placeholder: password_placeholder,
                           class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-4">
      <%= f.input :role, collection: User.roles.keys, include_blank: false, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-4">
      <%= f.input :first_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-4">
      <%= f.input :last_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
